var areaurl= $("#areaurl").val();
/*改变省份时*/
$(".prov").change(function(){
    /*市:city */
    queryArea(areaurl,$(".prov").val(),1,".city");

    /*区:dist*/
    setTimeout('queryArea(areaurl,$(".city").val(),2,".dist")',100);
