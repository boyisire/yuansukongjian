 <script>
	function ajaxChange(id){
		if(id !==''){
		   var cname="check"+id;
		   var data = {
			         id:id,
			         votes:$("#votes"+id).val(),
			         type:$("input[name="+cname+"]:checked").val()
			};
		   if(data.votes !=''){
				$.ajax({
					url:"__URL__/checkVotes",
					type:"POST",
					data:data,
					dataType:"json",
					success:function(s){
						if(s.code =='200'){
							alert('投票成功,当前名次：第'+s.sort+" 名,当前票数："+s.data+" 张");
							$("#vt"+id).html(s.data);
							$("#ming"+id).html(s.sort);
						}else{
							alert(s.msg);
						}
					}
					
				});
		   }else{
			   alert("票数不能为空");
		   }
		}else{
			alert("没找到id");
		}
	}
	function ajaxCorps(id){
		if(id !==''){
		   var cname="check"+id;
		   var data = {
			         id:id,
			         corps_fb:$("#corps_fb"+id).val()
			};
		   if(data.corps_fb !=''){
				$.ajax({
					url:"__URL__/checkCorpsFb",
					type:"POST",
					data:data,
					dataType:"json",
					success:function(s){
						if(s.code =='200'){
							alert('分贝值修改成功!');
							$("#fb"+id).html(s.data);
						}else{
							alert(s.msg);
						}
					}
					
				});
		   }else{
			   alert("分贝值不能为空");
		   }
		}else{
			alert("没找到id");
		}
	}
</script>
