* {
	margin: 0;
	padding: 0;
}
.buf-form{
	width: 1210px;
	margin: 0 auto;
	font-family: "PingFang SC Regular", "Microsoft YaHei";
	font-size: 18px;
	color: #333;
}
.buf-form h1{
	font-size: 26px;
	color: #333;
	font-weight: bold;
	text-align: center;
}
.buf-form p{
	font-size: 18px;
	color: #333;
	margin: 40px auto 0;
	height: 40px;
	width: 700px;
}
.buf-form p input{
	width: 334px;
	height: 40px;
	border: 1px solid #999;
	border-radius: 4px;
	font-size: 18px;
	float: left;
}
.buf-form p select{
	width: 124px;
	height: 30px;
	margin-right: 30px;
}
.buf-form p span{
	width: 180px;
	text-align: right;
	display: block;
	float: left;
	margin-right: 20px;
	line-height: 40px;
	height: 40px;
}
.clear{
	clear: both;
}
.buf-form p textarea{
	width: 334px;
	height: 150px;
	resize: none;
	border-radius: 4px;
	font-size: 18px;
	float: left;
	margin-right: 5px;
}
.buf-form .buf-form1{
	width: 334px;
	height: 40px;
	border-radius: 4px;
	font-size: 18px;
}
.re-file {
	position: relative;
	display: inline-block;
	background: #fff;
	border: 1px solid #999;
	border-radius: 17px;
	padding: 4px 12px;
	overflow: hidden;
	color: #3cb1f0;
	text-decoration: none;
	text-indent: 0;
	line-height: 26px;
	width: 314px;
	height: 34px;
	font-size: 18px;
	font-weight: bold;
	text-align: center;
}
.re-file input {
	position: absolute;
	right: 0;
	top: 0;
	opacity: 0;
}
.re-file:hover {
	color: #3cb1f0;
}
.buf-hint{
	line-height: 40px;
	margin-left: 5px;
	color: #cd0e22;
	font-size: 14px;
}
.buf-form input[type="submit"]{
	width: 334px;
	height: 40px;
	background-color: #3cb1f0;
	font-size: 18px;
	font-weight: bold;
	color: #fff;
	border: 0;
	border-radius: 4px;
	margin: 100px 0 0 455px;
	display: block;
}

